.container
  .col-xs-12.col-md-12
    h4.text-center Фотоотчет заявки №#{@execution.order.order_number}
  .row
  br

  .col-xs-12.col-md-8.col-md-offset-2
    - if @execution.images?
      #carousel-example-generic.carousel.slide data-ride="carousel"
        /! Slides
        .carousel-inner
          - @execution.images.each_with_index do |photo, index|
            div class=("#{index == 0 ? 'item active' : 'item'}")
              = image_tag(photo.large.url, :class => "img-rounded img-responsive")

        /! Controls
        a.left.carousel-control data-slide="prev" href="#carousel-example-generic"
          span.glyphicon.glyphicon-chevron-left
        a.right.carousel-control data-slide="next" href="#carousel-example-generic"
          span.glyphicon.glyphicon-chevron-right

.col-xs-12.col-md-4.col-md-offset-3
  br
  = link_to "Закрыть", order_path(@execution.order), class: "btn btn-info pull-right main-group center-block"
