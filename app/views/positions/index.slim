.container
  h1.text-right.pb-4 Справочник 'Должности'
  .col-3
    = link_to "Добавить должность",  new_position_path, class: "btn btn-outline-primary"
  .row.justify-content-end
    .col-6
      = search_form_for @q do |f|
        .input-group.my-4
          = f.input_field :name_cont, label: false, placeholder: 'Поиск', class: "form-control border border-secondary"
          span.input-group-append
            button.btn.btn-outline-secondary type="submit"
              span.fa.fa-search
  .row
    .col-12
      table.table.shadow.p-3.mb-5.bg-white.rounded
        thead.thead-light.text-center.text-dark
          tr.text-dark
            th = sort_link(@q, :name, 'Наименование', default_order: :asc)
        tbody
          - @positions.each do |position|
            tr
              td
                = position.name
                - if policy(position).edit?
                  = link_to edit_position_path(position), "data-toggle" => "tooltip", "data-placement" => "bottom",
                      "title" => "Корректировка данных" do
                    span.fa.fa-pencil-alt.edit-button
                - if policy(position).destroy? && position.can_destroy?
                  = link_to position, method: :delete, data: { confirm: "Вы действительно хотите удалить должность?" },
                      "data-toggle" => "tooltip", "data-placement" => "bottom", "title" => "Удалить должность" do
                       span.far.fa-trash-alt.edit-button
